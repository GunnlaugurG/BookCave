@model List<BookCave.Models.ViewModels.WishListViewModel>
<div class="container">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <h1 class="content-styling-h">My wishlist</h1>
            <hr />
        </div>
    </div>
</div>
<div class="container book-styling-layout">
    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-lg-3 col-sm-6 col-md-4">
                <div class="row">
                    <div class="col-lg-12 col-sm-12">
                        <a asp-controller="book" asp-action="details" asp-route-id="@book.bookForWishListId"><img src="@book.image" alt="wishListBookCover" class="Thumb-nail-image"></a>
                    </div>
                </div>
                <div class="row review-margin" >
                    <div id="book-info" class="col-lg-12 col-sm-12">
                        <a asp-controller="book" asp-action="details" asp-route-id="@book.bookForWishListId"><p>@book.title</p></a>
                        @for (int i = 0; i < @book.rating - 1; i++)
                        {
                            <img src="~/Images/fullStar.png" alt="rating" class="starRatings">
                        }
                        @if (@book.rating % 1 != 0)
                        {
                            <img src="~/Images/halfStar.png" alt="rating" class="starRatings">
                        }
                        else
                        {
                            <img src="~/Images/fullStar.png" alt="rating" class="starRatings">
                        }
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 col-sm-12 img-thumbnail-btn">
                        <button class="btn-cart btn-5-cart btn-5b-cart fa fa-shopping-cart add" value="@book.bookForWishListId" > <span>Add to cart</span></button>
                        <button class="btn-remove-wishlist btn-5-remove-wishlist btn-5b fa fa-trash remove-from-cart" value="@book.bookForWishListId"><span>Remove from wishlist</span></button>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 col-sm-4 spacing">
                    </div>
                </div>
            </div>

        }
    </div>
</div>