@model BookCave.Models.ViewModels.DisplayCartViewModel
<!--það þarf að færa scriptuna á réttan stað-->
<script> 
function myFunction() {
    confirm("Are you sure you want to clear your cart?");
}
</script>
<div class="container">
<div class="row">
  <div class="col-lg-12 col-md-12 col-sm-12">
  <h1>Cart</h1>
  </div>
</div>
<div class="row">
  <div class="col-lg-12 col-md-12 col-sm-12">
<table class="table table-striped">
  <thead>
        <tr>
            <th scope="col">BookName</th>
            <th scope="col">Quantity</th>
            <th scope="col">Price</th>
            <th scope="col">Remove</th>
            <th scope="col">Cost</th>
        </tr>
      @foreach(var book in Model.booksList)
        {
        <tr>
            <td><a asp-controller="Book" asp-action="details" asp-route-id="@book.id"> @book.title</a></td>
            <td><input type="number" value="@book.quantity" class="cart-quantity"></td>
            <td>@book.cost</td>
            <td><button class="btn btn-danger remove-from-cart" value="@book.id" >X</button></td>
        </tr>
        }
        
  </tbody>
</table>
</div>
</div>
<div class="row">
  
  <div class="col-lg-12 col-md-12 col-sm-12">
    
<h4 id="total-cost" class="text-right">Total price: @Model.totalCost $</h4>
<a asp-controller="account" asp-action="checkout"><button type="submit" id="check-out-button" class="btn btn-primary">CheckOut</button></a>
<a asp-controller="account" asp-action="emptyCart"><button onclick="myFunction()" type="button" id="clear-cart-button" >Clear cart!</button></a>
</div>
</div>
</div>