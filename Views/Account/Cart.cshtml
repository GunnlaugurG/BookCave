@model BookCave.Models.ViewModels.DisplayCartViewModel
<div class="container">
<div class="row">
  <div class="col-lg-12 col-md-12 col-sm-12">
  <h1>Cart</h1>
  <hr />
  </div>
</div>
<div class="row">
  <div class="col-lg-12 col-md-12 col-sm-12">
<table class="table table-striped" id="cart-table">
  <thead>
        <tr>
            <th scope="col">BookName</th>
            <th scope="col">Quantity</th>
            <th scope="col">Price</th>
            <th scope="col">Remove</th>
            <th scope="col">Cost</th>
        </tr>
  </thead>
  <tbody>
      @foreach(var book in Model.booksList)
        {
        <tr>
            <td><a asp-controller="Book" asp-action="details" asp-route-id="@book.id"> @book.title</a></td>
            <td><input type="number" value="@book.quantity" class="cart-quantity"></td>
            <td>@book.cost</td>
            <td><button class="btn btn-danger remove-from-cart" value="@book.id" >X</button></td>
        </tr>
        }
        
  </tbody>
</table>
</div>
</div>
<div class="row">
  
  <div class="col-lg-12 col-md-12 col-sm-12">
    
<h4 id="total-cost" class="text-right">Total price: @Model.totalCost $</h4>
<a asp-controller="account" asp-action="checkout"><button type="submit" id="check-out-button" class="btn btn-primary cart-buttons">CheckOut</button></a>
<button type="submit" id="clear-cart-button" class="cart-buttons">Clear cart!</button>
</div>
</div>
</div>