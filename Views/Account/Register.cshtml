@model BookCave.Models.ViewModels.RegisterViewModel

<h1>Nýskrá</h1>
<form asp-action="Register" asp-controller="Account" class="form-horizontal">
    <div class="form-group">
        <input type="email" asp-for="Email" class="form-control" placeholder="Email..." />
         <span asp-validation-for="Email"></span><br>
    </div>
    <div class="form-group">
        <input type="text" asp-for="FirstName" class="form-control" placeholder="Fornafn.." />
         <span asp-validation-for="FirstName"></span><br>
    </div>
    <div class="form-group">
        <input type="text" asp-for="LastName" class="form-control" placeholder="Eftirnafn." />
         <span asp-validation-for="LastName"></span><br>
    </div>
    <div class="form-group">
        <input type="password" asp-for="Password" class="form-control" placeholder="Lykilorð.." />
         <span asp-validation-for="Password"></span><br>
    </div>
        <div class="form-group">
        <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Staðfesta lykilorð" />
         <span asp-validation-for="ConfirmPassword"></span><br>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-default">Register</button>
    </div>
</form>