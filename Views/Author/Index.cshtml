@model List<BookCave.Models.ViewModels.AuthorListViewModel>
<div class="container">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <h1 class="content-styling-h">Authors</h1>
        </div>
        <hr />
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <table class="table">
                <th>Name</th>
                <th>Most popular book</th>
                @foreach (var author in Model)
        {
            <tr>
                <td>
                    <a asp-action="details" asp-controller="author" asp-route-id="@author.Id">@author.authorName</a> <br>
                </td>
                <td>
                    <a asp-controller="book" asp-action="details" asp-route-id="@author.mostPopularBook.Id">@author.mostPopularBook.title</a>
                </td>
            </tr>
}
            </table>
        </div>
    </div>
</div>