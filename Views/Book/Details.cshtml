@model BookCave.Models.ViewModels.BookDetailsViewModel

<div class="Container">
    <div class="row">

    <div class="col-sm-10 col-lg-10">
        <div id="image-container" class="col-sm-3 col-lg-3" style="height: 50%">
            <img src="@Model.image" alt="Book Cover">
        </div>
        <div class="col-sm-8 col-lg-8">
                <div class="row">
                    <div class="col-sm-12 col-lg-12" style="height: 70px">
                         <h4>@Model.name</h4>
                         <a asp-action="details" asp-controller="author" asp-route-id="@Model.author.Id"><p>@Model.author.authorName</p></a>
                    </div>
                    <div class="col-sm-12 col-lg-12" style="height: 200px">
                        <strong>Description</strong>
                        <p>@Model.description</p>
                    </div>
                    <div class="col-sm-12 col-lg-12 text-right">
                        <h2>@for(var i = 0; i < @Model.rating-1; i++) {
                            <img src="~/Images/fullStar.png" alt="rating" class="starRatings">
                        }
                        @if(@Model.rating % 2 != 0) {
                            <img src="~/Images/halfStar.png" alt="rating" class="starRatings">
                        } else {
                            <img src="~/Images/fullStar.png" alt="rating" class="starRatings">
                        }</h2>
                    </div>
                </div>
            </div>
            </div>

            <div class="col-sm-2 col-lg-2">
             <div class="row">
             <div class="col-sm-12 col-lg-12 text-right">
             <h3>@Model.price $</h3>
             </div>
             </div>
             <div class="row">
            <div class="col-sm-12 col-lg-12 three-buttons">
            <a id="write-review" class="btn btn-warning center-block" >Write review</a>
             <a asp-controller="book" asp-action="review" asp-route-Id=@Model.id class="btn btn-primary center-block" >Skrifa ummæli</a>

            <a  class="btn btn-warning center-block">Setja á óskalista</a>

            <a class="btn btn-default center-block">Setja í körfu</a>
            </div>
            </div>
                    </div>
    </div>
    <div class="row" id="review-form">
        <div>
            <p>Write a review</p>
            <textarea row="10" cols="70" id="description"></textarea>
        </div>
        <div>
         <p>Grade</p>
         <p id="book-id">@Model.id</p>
         <select id="ratings">
            <option value="5">5.0</option>
            <option value="4.5">4.5</option>
            <option value="4.0">4.0</option>
            <option value="3.5">3.5</option>
            <option value="3">3.0</option>
            <option value="2.5">2.5</option>
            <option value="2">2.0</option>
            <option value="1.5">1.5</option>
            <option value="1">1.0</option>
            <option value="0.5">0.5</option>
            <option value="0.0">0.0</option>
        </select>
        <button class="btn  btn-default" id="submit">Submit</button>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 col-lg-12" style="background-color: aquamarine; height: 150px; margin-top: 20px">
            <h1>Hér kemur review stebbi</h1>
        </div>
    </div>
</div>