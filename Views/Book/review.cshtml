@model BookCave.Models.InputModel.ReviewInputModel

<form method="POST" class="form-horizontal">
    <h1 asp-for="bookId" value="@Model.bookId">Nafn Bókar</h1>
    <div class="form-group">
        <label asp-for="Description" >Skrifaðu ummæli um bókina</label><br>
        <textarea row="10" cols="70" asp-for="Description">
        </textarea>
    </div>
    <div class=" form-group">
        <label asp-for="Ratings" >Einkun</label>
        <select asp-for="Ratings">
            <option value="5">5.0</option>
            <option value="4.5">4.5</option>
            <option value="4.0">4.0</option>
            <option value="3.5">3.5</option>
            <option value="3">3.0</option>
            <option value="2.5">2.5</option>
            <option value="2">2.0</option>
            <option value="1.5">1.5</option>
            <option value="1.0">1.0</option>
            <option value="0.5">0.5</option>
            <option value="0.0">0</option>
        </select>
    </div>
    <div>
        <input type="submit" class="btn btn-default"  value="Skrifa ummæli" />
    </div>
</form>